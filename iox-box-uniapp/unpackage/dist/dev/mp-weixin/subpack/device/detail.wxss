.whiteContainer {
  border-radius: 20rpx;
  padding: 20rpx;
}
.whiteContainer .table_head {
  margin: 20rpx 0;
}
.whiteContainer .container {
  background-color: #f8f8f8;
  border-radius: 60rpx;
  justify-content: space-between;
  display: flex;
}
.whiteContainer .container .statusItem {
  width: 190rpx;
  height: 83rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #636366;
  font-size: 28rpx;
}
.whiteContainer .container .statusItem .img {
  width: 33rpx;
  height: 33rpx;
  margin-right: 10rpx;
}
.whiteContainer .container .statusItem .img image {
  width: 100%;
  height: 100%;
}
.whiteContainer .container .stop {
  background-color: #ff4141;
  color: #ffffff;
}
.whiteContainer .container .open {
  background-color: #83bd67;
  color: #ffffff;
}
.whiteContainer .container .fault {
  background-color: #ff9000;
  color: #ffffff;
}
.head {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.head .text {
  width: 347rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: keep-all;
}
.head .button {
  background-color: #f7faff;
  color: #527ff4;
  font-size: 22rpx;
}
.head .img {
  width: 68rpx;
  height: 68rpx;
}
.head .img image {
  width: 100%;
  height: 100%;
}
.mt {
  margin-top: 40rpx;
}
.desc {
  color: #636366;
  font-size: 24rpx;
  margin-bottom: 40rpx;
}
.echartContainer {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.echartContainer .echartItem {
  width: 320rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
}
.echartContainer .echartItem .top {
  padding: 0 10rpx;
  font-size: 60rpx;
  flex: 1;
  background-color: #ddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-shrink: 0;
}
.echartContainer .echartItem .top .left {
  font-family: myfont;
}
.echartContainer .echartItem .top .right {
  display: flex;
}
.echartContainer .echartItem .top .right .num {
  font-family: myfont;
}
.echartContainer .echartItem .top .right .unit {
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.echartContainer .echartItem .bottom {
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  background-color: #ff9000;
  color: #ffffff;
}
.echartContainer .echartItem .bottom .circle {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 1px solid #ffffff;
  text-align: center;
  margin-right: 10rpx;
}
.uv-popup .uv-popup__content {
  width: 80%;
  padding: 20rpx;
  border-radius: 20rpx;
  display: flex !important;
  justify-content: space-between;
  flex-wrap: wrap;
}
.uv-popup .uv-popup__content .btnStatus {
  width: 190rpx;
  height: 83rpx;
  border-radius: 60rpx;
  color: #636366;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.uv-popup .uv-popup__content .active {
  background-color: #ff4141;
  color: #ffffff;
}

