.tab {
  padding: 20rpx;
}
.tab .table_head {
  margin-bottom: 30rpx;
}
.tab .tr {
  padding: 20rpx 0;
}
.tab .tr .row1 {
  display: flex;
}
.tab .tr .row1 > view:nth-child(1) {
  display: flex;
  align-items: center;
  flex: 1;
}
.tab .tr .row1 > view:nth-child(1) .status {
  margin-left: 20rpx;
  width: 20rpx;
  height: 10rpx;
  background-color: #dddddd;
}
.tab .tr .row1 > view:nth-child(1) .active {
  background-color: #bee400;
}
.tab .tr .row1 > view:nth-child(2) {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.tab .tr .row1 > view:nth-child(3) {
  width: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.tab .tr .row1 > view:nth-child(3) .circle {
  display: block;
  margin: 0 auto;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #dddddd;
}
.tab .tr .row1 > view:nth-child(3) .stop {
  background-color: #ff4141;
}
.tab .tr .row1 > view:nth-child(3) .open {
  background-color: #83bd67;
}
.tab .tr .row1 > view:nth-child(3) .fault {
  background-color: #ff9000;
}
.tab .tr .row2 {
  display: flex;
}
.tab .tr .row2 > view:nth-child(1) {
  flex: 1;
  display: flex;
  align-items: center;
}
.tab .tr .row2 > view:nth-child(2) {
  flex: 1;
  display: flex;
  align-items: center;
}
.tab .tr .row2 > view:nth-child(3) {
  width: 350rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.tab .tr .row3 {
  display: flex;
  align-items: center;
}
.tab .tr .row3 > view:nth-child(1) {
  flex: 1;
}
.tab .tr .row3 > view:nth-child(2) {
  flex: 0.8;
}
.tab .tr .row3 .consumer {
  width: 200rpx;
  display: flex;
  justify-content: flex-end;
}
.tab .tr .row3 .online {
  width: 100rpx;
}
.tab .tr .row3 .online .block {
  display: block;
  margin: 0 auto;
  width: 20rpx;
  height: 10rpx;
  background-color: #dddddd;
}
.tab .tr .row3 .online .active {
  background-color: #bee400;
}
.tab .tr .row4 {
  display: flex;
  align-items: center;
}
.tab .tr .row4 > view:nth-child(1) {
  flex: 1;
}
.tab .tr .row4 > view:nth-child(2) {
  width: 350rpx;
  display: flex;
  justify-content: flex-end;
}
.tab .tr .green {
  background-color: #ec7600;
  padding: 20rpx 0;
  border-radius: 20rpx;
}
.tab .tr .add {
  background-color: #bee400;
  padding: 20rpx 0;
  border-radius: 20rpx;
}
.tab .bg:nth-child(even) {
  background-color: #f8f8f8;
  border-radius: 20rpx;
}

